<%= form_tag sessions_path, :class => "text-bars" do %>
<div class="row">  
  <a href="/oauth/facebook">
   <i class="fi-social-facebook"></i>
    <div id="fblink">Login With Facebook</div>
  </a>
</div>
  

<div id="gline"></div> <center>OR</center> <div id="gline"></div>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <div class="actions"><%= submit_tag "Log in", :class => 'button tiny login' %></div>
  
 
            
<% end %>


