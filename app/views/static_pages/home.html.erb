<!-- multistep form -->
<%= form_tag plans_path, :method => :get, id: "msform" do %>
  <!-- progressbar -->
  <ul id="progressbar">
  	<li class="active">Account Setup</li>
  	<li>Social Profiles</li>
  	<li>Personal Details</li>
  </ul>
<!-- fieldsets -->
  <fieldset>
  	<h2 class="fs-title">Location</h2>
  	<h3 class="fs-subtitle">Which city do you want plans for?</h3>
  	<input id="search" name="city" placeholder="City" type="text" />

  	<%= submit_tag "Next", :class => "button [tiny small large] "%>
  </fieldset>

  <fieldset>
  	<h2 class="fs-title">Plan Details</h2>
  	<h3 class="fs-subtitle">Main details for plans</h3>
  	<input id="search" name="price" placeholder="Price" type="number" />
    <input id="search" name="data" placeholder="Data (GB)" type="number" />
    <input id="search" name="minute" placeholder="Minutes" type="number" />
    <input id="search" name="text" placeholder="Text" type="number" />
    

    <%= submit_tag "Next", :class => "button [tiny small large] "%>
  </fieldset>

  <fieldset>
  	<h2 class="fs-title">Plan Features</h2>
  	<h3 class="fs-subtitle">Features for plans</h3>
  	Early Evening <%= check_box_tag :early_evening %>
  	Canada Wide <%= check_box_tag :canada_wide %>
  	Voice Mail <%= check_box_tag :voice_mail %>
  	Call Display <%= check_box_tag :call_display %>
  </fieldset>

<% end %>