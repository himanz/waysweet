<p>Saved Plans</p>
<div id="savedpgrid">
   <div class="medium-3 columns">3

  <div class="savedplans">
  <% @user.plans.each do |plan| %>

    <div class="savedPlans" value="<%=plan.id%>">
      
      <ul class="pricing-table">
        <li class="title">$ <%= plan.price %></li>
        <li class="bullet-item"><%= plan.minute %> Minutes</li>
        <li class="bullet-item"><%= plan.data %> MB</li>
        <li class="bullet-item"><%= plan.text %> Text</li>
        <li class="bullet-item"><%= plan.carrier %></li>
        <li class="bullet-item"><%= @cities.find_by_id(plan.city_id).name %></li>
        <li class="description"><%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %></li>
      </ul>
      </div>
  <% end %>



    </div>
  </div>

</div>

 


