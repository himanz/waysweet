<p>Compare Plans</p>
<div class="compareBox">

</div>
<a href="#" data-reveal-id="myModal" class="modalButton radius button">Compare Plans</a>

<div id="myModal" class="reveal-modal" data-reveal>
	<a class="close-reveal-modal">&#215;</a>

</div>

<% if current_user.id == @user.id %>
	<p>Email</p>
	<%= @user.email %>
	<p>Owned Plans</p>
	<% @user.plans_owned.each do |plan| %>
	  <%= link_to "Delete", plan, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
	  <%= plan.price %></br>
		<%= plan.minute %></br>
		<%= plan.data %></br>
		<%= plan.text %>
		<p>-------------</p>
	<% end %>

  <p>============</p>
<!--  -->
	<p>Saved Plans</p>
	<% @user.plans.each do |plan| %>
	  <div class="savedPlans" value="<%=plan.id%>">
		  <%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
			<p class="pricePlan"><%= plan.price %></p>
			<p class="minutePlan"><%= plan.minute %></p>
			<p class="dataPlan"><%= plan.data %></p>
			<p class="textPlan"><%= plan.text %></p>
			<p>------------</p>	
    </div>
	<% end %>
<% end %>

<script>
  $(".savedPlans").on("click", function(){
  	$(this).addClass("comparePlan");
    $(".compareBox").append($(this))
  });
  $(".modalButton").on("click", function(){
    console.log($(".compareBox").children().length);
    $(".reveal-modal").append("a");
  });
</script>