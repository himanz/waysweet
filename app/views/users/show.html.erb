
<span data-tooltip class="has-tip" title="Select Plan and drag it to the left to compare">
  <a href="#" data-reveal-id="myModal" class="modalButton radius button">Compare Plans</a>
</span>

<div id="myModal" class="reveal-modal" data-reveal>
  <!-- <div class="row"> -->
<a class="close-reveal-modal">&#215;</a>
  <div class="blah">

        <% @user.plans.each do |plan| %>

        <div id="revealplanlist">
          <%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
          <p class="pricePlan"><%= plan.price %></p>
          <p class="minutePlan"><%= plan.minute %></p>
          <p class="dataPlan"><%= plan.data %></p>
          <p class="textPlan"><%= plan.text %></p>
          <p class="carrierPlan"><%= plan.carrier %></p>
          <p class="cityPlan"><%= @cities.find_by_id(plan.city_id).name %>
        
        </div>
        <div class="blank"></div>

      <% end %>
  </div>

</div>


<div id="dropplanlist">
  <p>Compare Plans</p>



  <div class="row">
    <div class="small-block-grid-3">
    </div>
  </div>
</div>

<div class="small-block-grid-3">
  <div class="large-6 columns panel">
     <p>Saved Plans</p>

    <% @user.plans.each do |plan| %>
    <div class="planlist">
      
        <ul>
          <center><div id="pricePlan">$<%= plan.price %></div></center>
          <div class="desc"><%= plan.minute %> Minutes</div>
          <div class="desc"><%= plan.data %> MB</div>
          <div class="desc"><%= plan.text %> Text</div>
          <div class="desc"><%= plan.carrier %></div>
          <div class="desc"><%= @cities.find_by_id(plan.city_id).name %>
            <br />
            <%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
        </ul>

    </div>
      <% end %>

    </div>
  </div>


  <% if current_user.id == @user.id %>

  <p>Plans Submitted</p>
  <% @user.plans_owned.each do |plan| %>
  <%= plan.price %></br>
  <%= plan.minute %></br>
  <%= plan.data %></br>
  <%= plan.text %>
  <%= link_to "Delete", plan, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
  <% end %>

  

<% end %>



