<a href="#" data-reveal-id="myModal" class="modalButton radius button">Compare Plans</a>

<div id="myModal" class="reveal-modal" data-reveal>
  <!-- <div class="row"> -->
<a class="close-reveal-modal">&#215;</a>
  <div class="small-block-grid-2">
      <li>
       <% @user.plans.each do |plan| %>

        <div id="revealplanlist">
          <%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
          <p class="pricePlan"><%= plan.price %></p>
          <p class="minutePlan"><%= plan.minute %></p>
          <p class="dataPlan"><%= plan.data %></p>
          <p class="textPlan"><%= plan.text %></p>
          <p class="carrierPlan"><%= plan.carrier %></p>
          <p class="cityPlan"><%= @cities.find_by_id(plan.city_id).name %>
        
      </li>
        </div>
      <% end %>
  </div>



</div>

<script>
$(function() {
 $( ".planlist" ).draggable({ grid: [ 100, 100 ] });
 $( ".planlist" ).draggable({ containment: "#dropplanlist" });
 $( "#dropplanlist" ).droppable({
  drop: function( event, ui ) {
    $( this )
    .html( "Plan Added!" );
  }
});
});
</script>

<p>Saved Plans</p>



<div id="dropplanlist">
  <p>Compare Plans</p>
  <div class="row">
    <div class="small-block-grid-3">
    </div>

  </div>
</div>

<div class="small-block-grid-3">
  <div class="large-6 columns panel" data-equalizer-watch>

    <% @user.plans.each do |plan| %>
    <div class="planlist" class="ui-widget-content">
      <div class="draglist">

        <%= link_to "Delete", plan.save_plans.where(user_id:current_user.id).first, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
        <p class="pricePlan"><%= plan.price %></p>
        <p class="minutePlan"><%= plan.minute %></p>
        <p class="dataPlan"><%= plan.data %></p>
        <p class="textPlan"><%= plan.text %></p>
        <p class="carrierPlan"><%= plan.carrier %></p>
        <p class="cityPlan"><%= @cities.find_by_id(plan.city_id).name %>

        </div>
      </div>
      <% end %>

    </div>
  </div>

  <% if current_user.id == @user.id %>

  <p>Plans Submitted</p>
  <% @user.plans_owned.each do |plan| %>
  <%= link_to "Delete", plan, :confirm => "Are you sure you want to delete this plan?", :method => :delete %>
  <%= plan.price %></br>
  <%= plan.minute %></br>
  <%= plan.data %></br>
  <%= plan.text %>
  <% end %>

