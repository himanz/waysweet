

<div class="formgrid">
  <center><h1>Cellphone Plans</h1></center> <br />  
  <table>
    <thead>
      <div class="searchbarbox">
        <%= render "searchbar" %>   
      </div>
      <tr>
        <h1><small><%= page_entries_info @plans %></small></h1>
      </tr>
      <tr>
        <th width="20%" class="displayPrice">Carrier</th>
        <th width="20%" class="displayPrice">Price</th>
        <th width="20%" class="displayPrice">Minutes</th>
        <th width="20%" class="displayPrice">Data</th>
        <th width="20%" class="displayPrice">Text</th>
        <th width="20%" class="displayPrice">Save Plan</th>
      </tr>
    </thead>

    <tbody>
      <div id="plan-list">
        <%= render :partial => "planlist" %>
      </div>
    </tbody> 
  </table>
  <%= paginate @plans %>
</div>




  
