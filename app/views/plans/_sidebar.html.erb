<div class="sticky">
  <div class="plansidebar">
      <div class="large-12 columns">
        <label>Select Carrier
          <select>
            <option value="rogers">Rogers</option>
            <option value="bell">Bell</option>
            <option value="telus">Telus</option>
          </select>
        </label>

    <div class="prices">
      <h3>Price</h3>
      <div id="slider1"></div>
      <input id="priceslider" style="border:0; color:#0067C3; font-weight:bold; font-size: 20px;">
      <%= hidden_field_tag :price %>
    </div>

    <div class="break"></div>

    <div class="minutes">
      <h3>Minutes</h3>
      <div id="slider2"></div> 
      <input id="minuteslider" style="border:0; color:#0067C3; font-weight:bold; font-size: 20px;">
      <%= hidden_field_tag :minute %>
    </div>

    <div class="break"></div>

    <div class="data">
      <h3>Data (in MB)</h3>
      <div id="slider3"></div>
      <input id="dataslider" style="border:0; color:#0067C3; font-weight:bold; font-size: 20px;">
      <%= hidden_field_tag :data %>
    </div>

    <div class="break"></div>

    <div class="texts">
      <h3>Text</h3>
      <div id="slider4"></div>
      <input id="textslider" style="border:0; color:#0067C3; font-weight:bold; font-size: 20px;"> 
      <%= hidden_field_tag :text %>
    </div>
    <div class="btnlayout">
      <%= submit_tag "Search", :name => nil, class: 'button [tiny small large] search-submit' %>
      </div>
      
    </div>
  </div>
</div>


