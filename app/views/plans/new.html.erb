<%= form_for @plan do |f| %>
  
    <div class="formgrid">
      <div class="prices">
        <h3>Price</h3>
        <div id="slider1"></div>
        <input id="priceslider" disabled style="border:0; color:#0067C3; font-weight:bold; font-size: 20px;">
        <div class="slider-text price-text"></div>
