<%= form_for @plan do |f| %>
  <div class="field">
	  <%= f.label :price %>
	  <%= f.number_field :price, :step => 'any' %>
  </div>
  <div class="field">
	  <%= f.label :data %>
	  <%= f.number_field :data %>
  </div>
  <div class="field">
	  <%= f.label :minute %>
	  <%= f.number_field :minute %>
  </div>
  <div class="field">
	  <%= f.label :text %>
	  <%= f.number_field :text %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city_id %> 
  </div>
  <div class="field">
    <%= f.label :carrier %>
    <%= f.text_field :carrier %>
  </div>
  <div class="field">
	  <%= f.submit :Submit %>
  </div>
<% end %>